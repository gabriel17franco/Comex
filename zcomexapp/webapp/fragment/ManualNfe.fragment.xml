<c:FragmentDefinition
	xmlns:m="sap.m"
	xmlns:c="sap.ui.core"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.uxap"
>
	<ObjectPageSubSection>
		<blocks>
			<f:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout"
				title=""
				labelSpanXL="4"
				labelSpanL="4"
				labelSpanM="12"
				labelSpanS="12"
				adjustLabelSpan="false"
				emptySpanXL="0"
				emptySpanL="0"
				emptySpanM="0"
				emptySpanS="0"
				columnsXL="2"
				columnsL="2"
				columnsM="1"
				singleContainerFullSize="false"
			>
				<f:content>
					<m:Label
						text="{i18n>document}"
						visible="{=${NfeDocument} !== '0000000000' }"
					/>
					<m:Text
						text="{NfeDocument}"
						visible="{=${NfeDocument} !== '0000000000' }"
					/>
					<m:Label
						text="{i18n>postingDate}"
						visible="{=${NfeDocument} !== '0000000000' }"
					/>
					<m:Text
						text="{
							path: 'NfePostingDate',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								style: 'medium'
							}
						}"
						visible="{=${NfeDocument} !== '0000000000' }"
					/>
					<m:Label
						text="{i18n>createdOn}"
						visible="{= ${NfeDocument} !== '0000000000'}"
					/>
					<m:Text
						text="{
							path: 'NfeCreatedOn',
							type: 'sap.ui.model.type.DateTime',
							formatOptions: {
								style: 'medium'
							}
						}"
						visible="{= ${NfeDocument} !== '0000000000'}"
					/>
				</f:content>
				<m:Button
					width="auto"
					icon="sap-icon://accept"
					text="{i18n>postingNfe}"
					type="Accept"
					press="onNfWritePost"
					visible="{=${NfeDocument} === '0000000000' }"
					enabled="{detailView>/buttons/nfe/enable}"
				/>
				<m:Button
					width="auto"
					icon="sap-icon://reject"
					text="{i18n>reverseNfe}"
					type="Reject"
					press="onNfWritePost"
					visible="{=${NfeDocument} !== '0000000000' }"
					enabled="{detailView>/buttons/nfe/enable}"
				/>
			</f:SimpleForm>
		</blocks>
	</ObjectPageSubSection>
</c:FragmentDefinition>